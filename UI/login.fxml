<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<!-- Login Page -->
<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu text="Help">
          <items>
            <MenuItem text="About" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    
    <AnchorPane VBox.vgrow="ALWAYS">
      <children>
        <Label text="Login" layoutX="250" layoutY="50" style="-fx-font-size:20;" />
        <TextField fx:id="usernameField" promptText="Username" layoutX="200" layoutY="100" />
        <PasswordField fx:id="passwordField" promptText="Password" layoutX="200" layoutY="150" />
        <Button text="Login" fx:id="loginButton" layoutX="250" layoutY="200" />
        <Hyperlink text="Register" layoutX="250" layoutY="250" fx:id="registerLink" />
      </children>
    </AnchorPane>
  </children>
</VBox>
