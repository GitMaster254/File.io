<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20; -fx-background-color: #F8F9FA;">
  
  <!-- Menu Bar -->
  <MenuBar VBox.vgrow="NEVER">
    <menus>
      <Menu text="Help">
        <items>
          <MenuItem text="About" />
        </items>
      </Menu>
    </menus>
  </MenuBar>
  
  <!-- Login Form -->
  <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
    
    <Label text="Login" style="-fx-font-size: 24; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" promptText="Username" maxWidth="250" />
    
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250" />

    <!-- Show Password Toggle -->
    <HBox alignment="CENTER_LEFT" spacing="5">
      <CheckBox fx:id="showPasswordCheckBox" text="Show Password" />
    </HBox>

    <Button text="Login" fx:id="loginButton" maxWidth="250" style="-fx-background-color: #007BFF; -fx-text-fill: white;" onAction="#login"/>

    <Hyperlink text="Register" fx:id="registerLink" style="-fx-text-fill: #007BFF;" onAction="#openRegisterPage"/>

  </VBox>

</VBox>
